{
    "title": "Delete Word with CMD+SHIFT+J",
    "rules": [
        {
            "description": "delete word with cmd+shift+j",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "j",
                        "modifiers": {
                            "mandatory": [
                                "left_command",
                                "left_shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "delete_or_backspace",
                            "modifiers": [
                                "option"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
